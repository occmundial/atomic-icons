{
  "branches": [
    "main"
  ],
  "dryRun": false,
  "ci": true,
  "debug": false,
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    [
      "@semantic-release/npm",
      {
        "pkgRoot": "dist"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          "dist/atomic-icons.svg"
        ]
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "npx rjp package.json version ${nextRelease.version} && npx ts-node --project tsconfig.ci.json scripts/saveVersion.ts ${nextRelease.version} && npx ts-node --project tsconfig.ci.json scripts/setPackage.ts",
        "publishCmd": "npx ts-node --project tsconfig.ci.json scripts/uploadSprite.ts ${nextRelease.version}"
      }
    ],
    [
      "@semantic-release/git",
      {
        "message": "ci: Release <%= nextRelease.version %> [skip ci]",
        "assets": [
          "package.json",
          "CHANGELOG.md",
          ".env"
        ]
      }
    ],
    [
      "semantic-release-slack-bot",
      {
        "notifyOnSuccess": true,
        "notifyOnFail": true,
        "markdownReleaseNotes": "<%= nextRelease.notes %>"
      }
    ]
  ]
}